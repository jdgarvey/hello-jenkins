{
  "name": "hello-jenkins",
  "version": "1.0.0",
  "main": "index.js",
  "license": "MIT",
  "scripts": {
    "test": "jest --coverage"
  },
  "dependencies": {
    "express": "^4.17.1",
    "jest-junit": "^8.0.0"
  },
  "devDependencies": {
    "jest": "^24.9.0",
    "jest-html-reporter": "^2.6.2",
    "yarn": "^1.17.3"
  },
  "jest": {
    "coverageReporters": [
      "text"
    ],
    "reporters": [
      "default",
      "jest-junit",
      "jest-html-reporter"
    ]
  },
  "jest-junit": {
    "outputDirectory": "reports/coverage/junit/junit.xml",
    "usePathForSuiteName": "true"
  },
  "jest-html-reporter": {
		"pageTitle": "Epic test suite",
		"outputPath": "./reports/index.html",
		"includeFailureMsg": true
	}
}
