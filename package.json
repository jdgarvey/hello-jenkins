{
  "name": "hello-jenkins",
  "version": "1.0.0",
  "main": "app/index.js",
  "license": "MIT",
  "scripts": {
    "e2e": "start-server-and-test start http://localhost:3000 cy:run",
    "cy:run": "cypress run",
    "test": "jest app/** --coverage",
    "start": "node app/index.js"
  },
  "dependencies": {
    "express": "^4.17.1",
    "jest-junit": "^8.0.0"
  },
  "devDependencies": {
    "cypress": "^3.4.1",
    "jest": "^24.9.0",
    "jest-html-reporter": "^2.6.2",
    "start-server-and-test": "^1.10.2",
    "yarn": "^1.22.0"
  },
  "jest": {
    "coverageReporters": [
      "text"
    ],
    "reporters": [
      "default",
      "jest-junit",
      "jest-html-reporter"
    ]
  },
  "jest-junit": {
    "outputDirectory": "reports/coverage/junit/junit.xml",
    "usePathForSuiteName": "true"
  },
  "jest-html-reporter": {
    "pageTitle": "Epic test suite",
    "outputPath": "./reports/index.html",
    "includeFailureMsg": true
  }
}
